<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit User</title>
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css"
    />
    <script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
    <style>
      /* Toast Overrides */
      .toastify {
        padding: 12px 20px;
        color: #fff;
        display: flex !important;
        align-items: center;
        gap: 10px;
        box-shadow: 0 3px 6px -1px rgba(0, 0, 0, 0.12),
          0 10px 36px -4px rgba(0, 0, 0, 0.3);
        background: linear-gradient(to right, #00eaff, #00a8b5);
        position: fixed;
        opacity: 0;
        transition: all 0.4s cubic-bezier(0.215, 0.61, 0.355, 1);
        border-radius: 8px;
        cursor: pointer;
        text-decoration: none;
        max-width: calc(50% - 20px);
        z-index: 2147483647;
      }

      .toastify.on {
        opacity: 1;
      }

      .toast-close {
        order: -1;
        opacity: 0.7;
        padding: 0 5px;
        font-size: 1.2em;
        line-height: 1;
        cursor: pointer;
        transition: opacity 0.2s ease;
        margin-right: 5px;
      }

      .toast-close:hover {
        opacity: 1;
      }

      .toastify-content {
        flex: 1;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
      }

      body {
        background-color: #1a2525;
        color: white;
        font-family: Arial, sans-serif;
        padding: 40px;
      }

      .container {
        max-width: 600px;
        background-color: #263535;
        padding: 30px;
        border-radius: 10px;
        margin: auto;
      }

      h2 {
        color: #00eaff;
        margin-bottom: 20px;
      }

      .form-group {
        margin-bottom: 20px;
      }

      label {
        display: block;
        margin-bottom: 8px;
        color: #ccc;
      }

      input,
      select {
        width: 100%;
        padding: 10px;
        border: 2px solid #00eaff;
        border-radius: 5px;
        background-color: #1a2525;
        color: white;
      }

      button {
        padding: 10px 20px;
        background-color: #00eaff;
        color: #1a2525;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-weight: bold;
        transition: background-color 0.3s;
      }

      button:hover {
        background-color: #08c2d4;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h2>Edit User</h2>
      <form action="/admin/users/update/<%= user._id %>" method="POST">
        <div class="form-group">
          <label>Name</label>
          <input type="text" name="name" value="<%= user.name %>" />
        </div>
        <div class="form-group">
          <label>Email</label>
          <input type="email" name="email" value="<%= user.email %>" />
        </div>
        <div class="form-group">
          <label>New Password (leave blank to keep current)</label>
          <input type="password" name="password" />
        </div>
        <button type="submit"><i class="fas fa-save"></i> Save Changes</button>
      </form>
    </div>
    <script type="module">
      import showFunToast from "/js/toast.js";

      document.addEventListener("DOMContentLoaded", function () {
        const form = document.querySelector("form");
        const nameInput = form.querySelector('input[name="name"]');
        const emailInput = form.querySelector('input[name="email"]');
        const passwordInput = form.querySelector('input[name="password"]');

        const userId = "<%= user._id %>";

        // Save initial values
        const originalValues = {
          name: nameInput.value,
          email: emailInput.value,
        };

        form.addEventListener("submit", async (e) => {
          e.preventDefault();

          const name = nameInput.value;
          const email = emailInput.value;
          const password = passwordInput.value;

          if (!name.trim() || !email.trim()) {
            showFunToast("❌ Please fill in all required fields.", "red");
            return;
          }

          const hasChanged =
            name !== originalValues.name ||
            email !== originalValues.email ||
            password.trim() !== "";

          if (!hasChanged) {
            showFunToast("ℹ️ No changes detected.", "red");
            return;
          }

          const body = {
            name,
            email,
          };

          if (password.trim()) {
            body.password = password.trim();
          }

          try {
            const response = await fetch(`/api/users/${userId}`, {
              method: "PUT",
              credentials: 'include',
              headers: {
                "Content-Type": "application/json",
              },
              body: JSON.stringify(body),
            });

            const data = await response.json();

            if (response.ok) {
              showFunToast(
                "✅ User updated successfully!",
                "linear-gradient(to right, #00eaff, #00a8b5)"
              );
              setTimeout(() => {
                window.location.href = "/admin/:id";
              }, 1500);
            } else {
              showFunToast(data.message || "❌ Update failed.", "red");
            }
          } catch (err) {
            console.error("Update error:", err);
            showFunToast("❌ Server error occurred.", "red");
          }
        });
      });
    </script>
  </body>
</html>
