<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Add Movie - X-System</title>
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css"
    />
    <script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: Arial, sans-serif;
      }

      body {
        background-color: rgb(0, 0, 0);
        color: white;
        min-height: 100vh;
      }

      .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 40px 20px;
      }

      .header {
        display: flex;
        align-items: center;
        gap: 15px;
        margin-bottom: 40px;
      }

      .header i {
        font-size: 2rem;
        color: #00eaff;
      }

      .header h1 {
        font-size: 2rem;
        background: linear-gradient(to right, #00eaff, #00a8b5);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
      }

      .form-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 30px;
      }

      .form-group {
        margin-bottom: 20px;
      }

      .form-group.full-width {
        grid-column: 1 / -1;
      }

      label {
        display: block;
        margin-bottom: 8px;
        color: #00eaff;
        font-weight: bold;
      }

      input[type="text"],
      input[type="number"],
      input[type="date"],
      input[type="url"],
      textarea,
      select {
        width: 100%;
        padding: 12px;
        background: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 8px;
        color: white;
        font-size: 1rem;
        transition: all 0.3s ease;
      }

      select option {
        color: black;
      }

      input:focus,
      textarea:focus,
      select:focus {
        outline: none;
        border-color: #00eaff;
        box-shadow: 0 0 10px rgba(0, 234, 255, 0.2);
      }

      textarea {
        min-height: 120px;
        resize: vertical;
      }

      .submit-btn {
        background: linear-gradient(to right, #00eaff, #00a8b5);
        color: #000;
        border: none;
        padding: 15px 30px;
        border-radius: 8px;
        font-size: 1.1rem;
        font-weight: bold;
        cursor: pointer;
        transition: all 0.3s ease;
        margin-top: 20px;
      }

      .submit-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 20px rgba(0, 234, 255, 0.2);
      }
    </style>
  </head>
  <body>
    <div class="container">
      <div class="header">
        <i class="fas fa-film"></i>
        <h1>Add New Movie</h1>
      </div>

      <form id="addMovieForm" action="/api/movies" method="POST">
        <div class="form-grid">
          <div class="form-group">
            <label for="title">Movie Title</label>
            <input type="text" id="title" name="title" placeholder="e.g. Interstellar" />
          </div>

          <div class="form-group">
            <label for="releasedate">Release Date</label>
            <input type="date" id="releasedate" name="releasedate" />
          </div>

          <div class="form-group">
            <label for="duration">Duration (minutes)</label>
            <input type="number" id="duration" name="duration" min="1" placeholder="e.g. 145" />
          </div>

          <div class="form-group">
            <label for="rating">Rating (0-10)</label>
            <input type="number" id="rating" name="rating" step="0.1" placeholder="e.g. 8.7" />
          </div>

          <div class="form-group">
            <label for="genre">Genre</label>
            <input type="text" id="genre" name="genre" placeholder="e.g. Action, Drama" />
          </div>

          <div class="form-group">
            <label for="cast">Cast Members</label>
            <input type="text" id="cast" name="cast" placeholder="e.g. John Doe, Jane Smith" />
          </div>

          <div class="form-group full-width">
            <label for="description">Description</label>
            <textarea id="description" name="description" placeholder="Write a short summary..."></textarea>
          </div>

          <div class="form-group">
            <label for="posterURL">Poster URL</label>
            <input type="url" id="posterURL" name="posterURL" placeholder="https://..." />
          </div>

          <div class="form-group">
            <label for="trailerURL">Trailer URL</label>
            <input type="url" id="trailerURL" name="trailerURL" placeholder="https://..." />
          </div>

          <div class="form-group">
            <label for="category">Category</label>
            <select id="category" name="category">
              <option value="trending">Trending</option>
              <option value="new release">New Release</option>
            </select>
          </div>
        </div>

        <button type="submit" class="submit-btn">
          <i class="fas fa-save"></i> Save Movie
        </button>
      </form>
    </div>

    <script type="module">
      import showFunToast from "/js/toast.js";
    
      document.getElementById("addMovieForm").addEventListener("submit", async (e) => {
        e.preventDefault();
    
        // Get values from form
        const title = document.getElementById("title").value.trim();
        const releasedate = document.getElementById("releasedate").value.trim();
        const duration = document.getElementById("duration").value.trim();
        const rating = document.getElementById("rating").value.trim();
        const genre = document.getElementById("genre").value.trim();
        const cast = document.getElementById("cast").value.trim();
        const description = document.getElementById("description").value.trim();
        const posterURL = document.getElementById("posterURL").value.trim();
        const trailerURL = document.getElementById("trailerURL").value.trim();
        const category = document.getElementById("category").value;
    
    
        // Validate required fields
        if (
          !title || !releasedate || !duration || !rating || !genre || !cast ||
          !description || !posterURL || !trailerURL || !category
        ) {
          return showFunToast("❗ All fields are required", "red");
        }
    
        // Build movie data object
        const data = {
          title,
          releasedate,
          duration,
          rating,
          genre: genre.split(",").map(g => g.trim()),
          cast: cast.split(",").map(c => ({ name: c.trim() })),
          description,
          posterURL,
          trailerURL,
          category,
        };
    
        try {
          const response = await fetch("/api/movies/addmovies", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify(data),
          });
    
          const responseData = await response.json();
    
          if (response.ok) {
            showFunToast("✅ Movie added successfully!", "linear-gradient(to right, #00eaff, #00a8b5)");
            setTimeout(() => {
              window.location.href = "/admin/admin";
            }, 1500);
          } else {
            showFunToast(responseData.error || "❗ Failed to add movie", "red");
          }
        } catch (error) {
          showFunToast(error.message || "❗ Server error", "red");
        }
      });
    </script>
    
  </body>
</html>
