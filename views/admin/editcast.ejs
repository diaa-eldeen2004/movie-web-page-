<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Add Movie - X-System</title>
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css"
    />
    <script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: Arial, sans-serif;
      }

      body {
        background-color: rgb(0, 0, 0);
        color: white;
        min-height: 100vh;
      }

      .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 40px 20px;
      }

      .header {
        display: flex;
        align-items: center;
        gap: 15px;
        margin-bottom: 40px;
      }

      .header i {
        font-size: 2rem;
        color: #00eaff;
      }

      .header h1 {
        font-size: 2rem;
        background: linear-gradient(to right, #00eaff, #00a8b5);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
      }

      .form-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 30px;
      }

      .form-group {
        margin-bottom: 20px;
      }

      .form-group.full-width {
        grid-column: 1 / -1;
      }

      label {
        display: block;
        margin-bottom: 8px;
        color: #00eaff;
        font-weight: bold;
      }

      input[type="text"],
      input[type="number"],
      input[type="date"],
      input[type="url"],
      textarea,
      select {
        width: 100%;
        padding: 12px;
        background: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 8px;
        color: white;
        font-size: 1rem;
        transition: all 0.3s ease;
      }

      input:focus,
      textarea:focus,
      select:focus {
        outline: none;
        border-color: #00eaff;
        box-shadow: 0 0 10px rgba(0, 234, 255, 0.2);
      }

      textarea {
        min-height: 120px;
        resize: vertical;
      }

      .cast-container {
        display: flex;
        flex-direction: column;
        gap: 10px;
      }

      .cast-item {
        display: flex;
        gap: 10px;
        align-items: center;
      }

      .cast-item input {
        flex: 1;
      }

      .btn-remove {
        background: none;
        border: none;
        color: #ff5e5e;
        cursor: pointer;
        font-size: 1.2rem;
        padding: 5px;
        transition: all 0.3s ease;
      }

      .btn-remove:hover {
        color: #ff0000;
        transform: scale(1.1);
      }

      .btn-add {
        background: none;
        border: none;
        color: #00eaff;
        cursor: pointer;
        font-size: 1.2rem;
        padding: 5px;
        transition: all 0.3s ease;
      }

      .btn-add:hover {
        color: #00a8b5;
        transform: scale(1.1);
      }

      .submit-btn {
        background: linear-gradient(to right, #00eaff, #00a8b5);
        color: #000;
        border: none;
        padding: 15px 30px;
        border-radius: 8px;
        font-size: 1.1rem;
        font-weight: bold;
        cursor: pointer;
        transition: all 0.3s ease;
        margin-top: 20px;
      }

      .submit-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 20px rgba(0, 234, 255, 0.2);
      }

      .genre-tags {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        margin-top: 10px;
      }

      .genre-tag {
        background: rgba(0, 234, 255, 0.1);
        padding: 5px 15px;
        border-radius: 20px;
        display: flex;
        align-items: center;
        gap: 8px;
      }

      .genre-tag button {
        background: none;
        border: none;
        color: #ff5e5e;
        cursor: pointer;
        font-size: 0.9rem;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <div class="header">
        <i class="fas fa-film"></i>
        <h1>Edit Movie</h1>
      </div>

      <form id="addMovieForm" action="/api/movies" method="POST">
        <div class="form-grid">
          <!-- Title -->
          <div class="form-group">
            <label for="title">Movie Title</label>
            <input
              type="text"
              id="title"
              name="title"
              value="<%= movie.title %>"
            />
          </div>

          <!-- Release Date -->
          <div class="form-group">
            <label for="releasedate">Release Date</label>
            <input
              type="date"
              id="releasedate"
              name="releasedate"
              value="<%= new Date(movie.releasedate).toISOString().slice(0, 10) %>"
            />
          </div>

          <!-- Duration -->
          <div class="form-group">
            <label for="duration">Duration (minutes)</label>
            <input
              type="number"
              id="duration"
              name="duration"
              min="1"
              placeholder="Enter duration in minutes"
              value="<%= movie.duration %>"
            />
          </div>

          <!-- Rating -->
          <div class="form-group">
            <label for="rating">Rating (0-10)</label>
            <input
              type="number"
              id="rating"
              name="rating"
              step="0.1"
              placeholder="Enter rating"
              value="<%= movie.rating %>"
            />
          </div>

          <!-- Genre -->
          <div class="form-group">
            <label for="genre">Genre</label>
            <input
              type="text"
              id="genre"
              name="genre"
              placeholder="Enter genres separated by commas (e.g., Action, Drama, Sci-Fi)"
              value="<%= movie.genre %>"
            />
          </div>

          <!-- Cast -->
          <div class="form-group">
            <label for="cast">Cast Members</label>
            <input
              type="text"
              id="cast"
              name="cast"
              placeholder="Enter cast members separated by commas (e.g., John Doe, Jane Smith)"
              value="<%= movie.cast.map(actor => actor.name).join(', ') %>"
            />
          </div>

          <!-- Description -->
          <div class="form-group full-width">
            <label for="description">Description</label>
            <textarea
              id="description"
              name="description"
              placeholder="Enter movie description"
            >
<%= movie.description %></textarea
            >
          </div>

          <!-- Poster URL -->
          <div class="form-group">
            <label for="posterURL">Poster URL</label>
            <input
              type="url"
              id="posterURL"
              name="posterURL"
              placeholder="Enter poster image URL"
              value="<%= movie.posterURL %>"
            />
          </div>

          <!-- Trailer URL -->
          <div class="form-group">
            <label for="trailerURL">Trailer URL</label>
            <input
              type="url"
              id="trailerURL"
              name="trailerURL"
              placeholder="Enter trailer video URL"
              value="<%= movie.trailerURL %>"
            />
          </div>

          <!-- Category -->
          <div class="form-group">
            <label for="category">Category</label>
            <select id="category" name="category">
              <option value="trending" <%= movie.category === "trending" ? "selected" : "" %>>Trending</option>
              <option value="new release" <%= movie.category === "new release" ? "selected" : "" %>>New Release</option>
            </select>
          </div>
        </div>

        <button type="submit" class="submit-btn">
          <i class="fas fa-save"></i> Save Movie
        </button>
      </form>
    </div>

    <script type="module">
      import showFunToast from "/js/toast.js";
    
      document.addEventListener("DOMContentLoaded", function () {
        const form = document.querySelector("#addMovieForm");
        const titleInput = form.querySelector('input[name="title"]');
        const releaseDateInput = form.querySelector('input[name="releasedate"]');
        const durationInput = form.querySelector('input[name="duration"]');
        const ratingInput = form.querySelector('input[name="rating"]');
        const genreInput = form.querySelector('input[name="genre"]');
        const castInput = form.querySelector('input[name="cast"]');
        const descriptionInput = form.querySelector('textarea[name="description"]');
        const posterURLInput = form.querySelector('input[name="posterURL"]');
        const trailerURLInput = form.querySelector('input[name="trailerURL"]');
        const categorySelect = form.querySelector('select[name="category"]');
    
        const movieId = "<%= movie._id %>";
    
        const originalValues = {
          title: titleInput.value,
          releasedate: releaseDateInput.value,
          duration: durationInput.value,
          rating: ratingInput.value,
          genre: genreInput.value,
          cast: castInput.value,
          description: descriptionInput.value,
          posterURL: posterURLInput.value,
          trailerURL: trailerURLInput.value,
          category: categorySelect.value,
        };
    
        form.addEventListener("submit", async (e) => {
          e.preventDefault();
    
          const title = titleInput.value.trim();
          const releasedate = releaseDateInput.value;
          const duration = durationInput.value.trim();
          const rating = ratingInput.value.trim();
          const genre = genreInput.value.trim();
          const cast = castInput.value.trim();
          const description = descriptionInput.value.trim();
          const posterURL = posterURLInput.value.trim();
          const trailerURL = trailerURLInput.value.trim();
          const category = categorySelect.value;
    
          if (!title || !releasedate || !duration || !rating || !genre || !description || !posterURL || !trailerURL || !category) {
            showFunToast("❌ Please fill in all required fields.", "red");
            return;
          }
    
          const hasChanged =
            title !== originalValues.title ||
            releasedate !== originalValues.releasedate ||
            duration !== originalValues.duration ||
            rating !== originalValues.rating ||
            genre !== originalValues.genre ||
            cast !== originalValues.cast ||
            description !== originalValues.description ||
            posterURL !== originalValues.posterURL ||
            trailerURL !== originalValues.trailerURL ||
            category !== originalValues.category;
    
          if (!hasChanged) {
            showFunToast("ℹ️ No changes detected.", "red");
            return;
          }
    
          const ratingNum = parseFloat(rating);
          if (isNaN(ratingNum) || ratingNum < 0 || ratingNum > 10) {
            showFunToast("❌ Rating must be between 0 and 10.", "red");
            return;
          }
    
          const durationNum = parseInt(duration);
          if (isNaN(durationNum) || durationNum <= 0) {
            showFunToast("❌ Duration must be a positive number.", "red");
            return;
          }
    
          const genres = genre.split(",").map((g) => g.trim()).filter(Boolean);
          const castMembers = cast.split(",").map((c) => ({ name: c.trim() })).filter((c) => c.name);
    
          const body = {
            title,
            releasedate,
            duration: durationNum,
            rating: ratingNum,
            genre: genres,
            cast: castMembers,
            description,
            posterURL,
            trailerURL,
            category,
          };
    
          try {
            const response = await fetch(`/api/movies/${movieId}`, {
              method: "PUT",
              headers: { "Content-Type": "application/json" },
              body: JSON.stringify(body),
            });
    
            const data = await response.json();
    
            if (response.ok) {
              showFunToast("✅ Movie updated successfully!", "linear-gradient(to right, #00eaff, #00a8b5)");
              setTimeout(() => {
                window.location.href = `/admin/:id`;
              }, 1500);
            } else {
              showFunToast(data.message || "❌ Update failed.", "red");
            }
          } catch (err) {
            console.error("Update error:", err);
            showFunToast("❌ Server error occurred.", "red");
          }
        });
      });
    </script>
  </body>
</html>
