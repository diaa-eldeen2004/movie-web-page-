<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'><text y='.9em' font-size='90'>üì∫</text></svg>" />
    <title>Edit Contact - Admin Dashboard</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css"/>
    <script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: Arial, sans-serif;
        }

        body {
            background-color: rgb(0, 0, 0);
            color: white;
            padding: 20px;
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
        }

        .header {
            margin-bottom: 30px;
        }

        .header h1 {
            font-size: 2rem;
            background: linear-gradient(to right, #00eaff, #00a8b5);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            margin-bottom: 10px;
        }

        .back-btn {
            color: #fff;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            margin-bottom: 20px;
        }

        .back-btn:hover {
            color: #00eaff;
        }

        .form-container {
            background: rgba(255, 255, 255, 0.05);
            border-radius: 12px;
            padding: 30px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-group label {
            display: block;
            margin-bottom: 8px;
            color: rgba(255, 255, 255, 0.8);
        }

        .form-group select,
        .form-group input {
            width: 100%;
            padding: 12px;
            background: rgba(255, 255, 255, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 6px;
            color: white;
            font-size: 1rem;
        }

        .form-group select:focus,
        .form-group input:focus {
            outline: none;
            border-color: #00eaff;
        }

        .submit-btn {
            padding: 12px 25px;
            background: linear-gradient(to right, #00eaff, #00a8b5);
            color: #000;
            border: none;
            border-radius: 8px;
            font-weight: bold;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .submit-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 20px rgba(0, 234, 255, 0.2);
        }

        .icon-preview {
            font-size: 2rem;
            color: #00eaff;
            margin-top: 10px;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="container">
        <a href="/admin/contacts" class="back-btn">
            <i class="fas fa-arrow-left"></i> Back to Contacts
        </a>

        <div class="header">
            <h1>Edit Contact</h1>
        </div>

        <div class="form-container">
            <form id="editContactForm">
                <div class="form-group">
                    <label for="type">Contact Type</label>
                    <select id="type" name="type" required>
                        <option value="">Select Type</option>
                        <option value="email" <%= contact.type === 'email' ? 'selected' : '' %>>Email</option>
                        <option value="facebook" <%= contact.type === 'facebook' ? 'selected' : '' %>>Facebook</option>
                        <option value="instagram" <%= contact.type === 'instagram' ? 'selected' : '' %>>Instagram</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="displayName">Display Name</label>
                    <input type="text" id="displayName" name="displayName" value="<%= contact.displayName %>" required>
                </div>

                <div class="form-group">
                    <label for="value">Contact Value</label>
                    <input type="text" id="value" name="value" value="<%= contact.value %>" required>
                </div>

                <div class="form-group">
                    <label for="icon">Icon Class (Font Awesome)</label>
                    <input type="text" id="icon" name="icon" value="<%= contact.icon %>" required placeholder="e.g., fas fa-envelope">
                    <div id="iconPreview" class="icon-preview">
                        <i class="<%= contact.icon %>"></i>
                    </div>
                </div>

                <button type="submit" class="submit-btn">
                    <i class="fas fa-save"></i> Save Changes
                </button>
            </form>
        </div>
    </div>

    <script type="module">
        import showFunToast from "/js/toast.js";

        const form = document.getElementById('editContactForm');
        const iconInput = document.getElementById('icon');
        const iconPreview = document.getElementById('iconPreview');

        // Preview icon as user types
        iconInput.addEventListener('input', () => {
            iconPreview.innerHTML = `<i class="${iconInput.value}"></i>`;
        });

        form.addEventListener('submit', async (e) => {
            e.preventDefault();

            const formData = {
                type: document.getElementById('type').value,
                displayName: document.getElementById('displayName').value,
                value: document.getElementById('value').value,
                icon: document.getElementById('icon').value
            };

            try {
                const response = await fetch('/admin/api/contacts/<%= contact._id %>', {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    credentials: 'include',
                    body: JSON.stringify(formData)
                });

                const data = await response.json();

                if (response.ok) {
                    showFunToast(
                        "‚úÖ Contact updated successfully",
                        "linear-gradient(to right, #00eaff, #00a8b5)"
                    );
                    setTimeout(() => {
                        window.location.href = '/admin/contacts';
                    }, 1000);
                } else {
                    showFunToast(data.message || "‚ùå Failed to update contact", "red");
                }
            } catch (error) {
                console.error('Error updating contact:', error);
                showFunToast("‚ùå Server error occurred", "red");
            }
        });
    </script>
</body>
</html> 