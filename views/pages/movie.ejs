<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= movie.title %> - Movie Website</title>

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />

    <!-- External CSS -->
    <link rel="stylesheet" href="/css/styles.css" />
    <link rel="stylesheet" href="/css/movie.css" />

    <!-- Icons -->
    <link
      href="https://cdn.jsdelivr.net/npm/remixicon@3.5.0/fonts/remixicon.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"
    />

    <!-- Toastify CSS and JS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
  </head>
  <body>
    <!-- Navbar -->
    <%- include('../partials/navbar.ejs') %>

    <!-- Movie Detail Section -->
    <section class="container my-5 pt-5 d-flex justify-content-center">
      <div class="movie-detail-section">
        <!-- Trailer on the left -->
        <div class="trailer-embed">
          <% if (movie.trailerURL) { %>
          <div class="ratio ratio-16x9">
            <iframe
              src="<%= movie.trailerURL.replace('watch?v=', 'embed/') %>"
              title="Trailer"
              frameborder="0"
              allowfullscreen
            ></iframe>
          </div>
          <% } %>
          <div class="description mt-4"><%= movie.description %></div>
        </div>

        <!-- Poster and info on the right -->
        <div class="movie-info">
          <img
            src="<%= movie.posterURL %>"
            alt="<%= movie.title %> poster"
            class="movie-image"
          />
          <h1 class="movie-title"><%= movie.title %></h1>
          <div class="movie-details">
            <div class="movie-detail">
              <i class="fa-solid fa-calendar"></i>
              <span><%= new Date(movie.releasedate).getFullYear() %></span>
            </div>
            <div class="movie-detail">
              <i class="fa-solid fa-clock"></i>
              <span><%= movie.duration %> min</span>
            </div>
            <div class="movie-detail">
              <i class="fa-solid fa-film"></i>
              <span><%= movie.genre.join(', ') %></span>
            </div>
            <div class="movie-detail">
              <i class="fa-solid fa-star"></i>
              <span><%= movie.rating %></span>/10
            </div>
          </div>

          <!-- Action Buttons -->
          <div class="action-buttons">
            <a href="#" class="action-button watch-now">
              <i class="fas fa-play"></i> Watch Now
            </a>
            <% if (movie.trailerURL) { %>
            <a href="<%= movie.trailerURL %>" class="action-button trailer" target="_blank">
              <i class="fas fa-film"></i> Trailer
            </a>
            <% } %>
          </div>
        </div>
      </div>
    </section>

    <!-- Cast Section -->
    <% if (movie.cast && movie.cast.length > 0) { %>
    <section class="cast-section container">
      <h3>Cast</h3>
      <div class="cast-grid">
        <% movie.cast.forEach(cast => { %>
        <div class="cast-card">
          <img src="<%= cast.imageURL %>" alt="<%= cast.name %>" class="cast-image" />
          <div class="cast-info">
            <h4 class="cast-name"><%= cast.name %></h4>
            <p class="cast-role"><%= cast.role %></p>
          </div>
        </div>
        <% }) %>
      </div>
    </section>
    <% } %>

    <!-- Comments Section -->
    <section class="comments-section container">
      <h3>Comments</h3>
      <% if (user) { %>
      <form class="comment-form">
        <textarea placeholder="Write your comment..."></textarea>
        <button type="submit">Post Comment</button>
      </form>
      <% } %>
      <div class="comment-list">
        <% if (comments && comments.length > 0) { %>
          <% comments.forEach(comment => { %>
          <div class="comment">
            <div class="comment-header">
              <span class="comment-user"><%= comment.user.name %></span>
              <span class="comment-date"><%= new Date(comment.createdAt).toLocaleDateString() %></span>
            </div>
            <p class="comment-content"><%= comment.content %></p>
          </div>
          <% }) %>
        <% } else { %>
          <p>No comments yet. Be the first to comment!</p>
        <% } %>
      </div>
    </section>

    <%- include('../partials/footer.ejs') %>

    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Custom JS -->
    <script src="/js/movie.js"></script>
  </body>
</html>